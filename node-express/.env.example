# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=rss_summarization_dev
DB_USER=root
DB_PASSWORD=
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Encryption Key (for user API keys)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=info

# Feed Processing
DEFAULT_FEED_FETCH_INTERVAL=3600000
MAX_ARTICLES_PER_FEED=100
FEED_REQUEST_TIMEOUT=30000

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
FEED_POLLING_CRON=0 */1 * * * *

# Article Scheduler Configuration
ENABLE_ARTICLE_SCHEDULER=false
ARTICLE_RETENTION_DAYS=30
TZ=America/New_York

# API Keys for external access
VALID_API_KEYS=api-key-1,api-key-2

# File Upload (if needed)
MAX_FILE_SIZE=5MB
UPLOAD_DIRECTORY=uploads/

# Cache Configuration (if using Redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@rsssummary.com

# Frontend URL
FRONTEND_URL=http://localhost:8080